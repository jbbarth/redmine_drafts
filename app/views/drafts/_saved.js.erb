var $status = $("#draft-status")
var first_save = $status.is(":empty")
$status.html("<%= l(:label_draft_saved_time, @draft.updated_at.strftime("%H:%M:%S")) %>")
if (first_save) {
  $status.effect("highlight")
}
if ($status.is(":empty")) {
  $status.hide()
}
//hide any previous "draft-pending" div
$("#draft-pending").hide()
